[user]
	name = Dylan Andrews
	email = dylanandr@gmail.com
[push]
  default = current
[color]
  ui = always
[alias]
  car = commit --amend --no-edit
  aa = add --all
  ap = add --patch
  ba = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  br = branch
  ci = commit -v
  co = checkout
  cos = checkout staging
  pos = pull origin staging
  df = diff
  fo = fetch origin -v --prune
  ls = ls-files
  mg = merge
  pf = push --force-with-lease
  pl = pull origin
  pr = pull-request
  ps = push origin
  rb = rebase -i
  rl = reflog --pretty=reflog
  st = status
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = true
  tool = opendiff
[mergeTool]
  keepBackup = false
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  oldNormal = cyan bold
  oldHighlight = cyan bold 52
  newNormal = cyan bold
  newHighlight = cyan bold 22
  meta = blue
  frag = magenta bold
  commit =  blue bold
  old = cyan bold
  new = cyan bold
  whitespace = cyan reverse
[color "diff-highlight"]
  oldNormal = cyan bold
  oldHighlight = cyan bold 52
  newNormal = magenta bold
  newHighlight = magenta bold 22
[color "status"]
  added = blue
  changed = magenta
  untracked = cyan
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
[pretty]
  reflog = %C(auto)%h %<|(17)%gd %<|(30)%C(blue)%cr%C(reset) %s
[rebase]
  autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
